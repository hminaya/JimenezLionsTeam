<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ServletControlRoll</servlet-name>
        <servlet-class>com.puestodequipe.mvc.controllers.ServletControlRoll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlProductos</servlet-name>
        <servlet-class>com.puestodequipe.mvc.controllers.ServletControlProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlOrdenes</servlet-name>
        <servlet-class>com.puestodequipe.mvc.controllers.ServletControlOrdenes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlOrdenesDetalles</servlet-name>
        <servlet-class>com.puestodequipe.mvc.controllers.ServletControlOrdenesDetalles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlInventario</servlet-name>
        <servlet-class>com.puestodequipe.mvc.controllers.ServletControlInventario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlUsuarios</servlet-name>
        <servlet-class>com.puestodequipe.mvc.controllers.ServletControlUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletControlRoll</servlet-name>
        <url-pattern>/ServletControlRoll</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>
/WEB-INF/taglibrary/rssutils.tld
  </taglib-uri>
            <taglib-location>
/WEB-INF/taglibrary/rssutils.tld
  </taglib-location>
        </taglib>
    </jsp-config>
    <servlet-mapping>
        <servlet-name>ServletControlProductos</servlet-name>
        <url-pattern>/ServletControlProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControlOrdenes</servlet-name>
        <url-pattern>/ServletControlOrdenes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControlOrdenesDetalles</servlet-name>
        <url-pattern>/ServletControlOrdenesDetalles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControlInventario</servlet-name>
        <url-pattern>/ServletControlInventario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControlUsuarios</servlet-name>
        <url-pattern>/ServletControlUsuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
